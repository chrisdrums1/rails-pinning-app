<div class="form-horizontal">

  <%= form_for(@pin) do |f| %>
    <div class="form-group-lg">
      <div class="col-sm-2">
        <label for="pin_title">Title</label>
      </div>
      <div class="col-sm-10">
        <%= f.text_field :title %>
      </div>
    </div>

    <div class="form-control-lg">
      <div class="col-sm-2">
        <label for="pin_category_id">Category</label>
      </div>
      <div class="col-sm-10">
        <%= f.collection_select(:category_id, Category.all, :id, :name) %>
      </div>
    </div>

    <div class="form-group-lg">
      <div class="col-sm-2">
        <label for="pin_description">Description</label>
      </div>
      <div class="col-sm-10">
        <%= f.text_field :text %>
      </div>
    </div>

    <div class="form-group-lg">
      <div class="col-sm-2">
        <label for="pin_slug">Slug</label>
      </div>
      <div class="col-sm-10">
        <%= f.text_field :slug %>
      </div>
    </div>

    <div class="form-group-lg">
      <div class="col-sm-2">
        <label for="pin_link">Link</label>
      </div>
      <div class="col-sm-10">
        <%= f.url_field :url %>
      </div>
    </div>

    <div class="form-group-lg">
      <%= f.submit %>
    </div>

  <% end %>
</div>
